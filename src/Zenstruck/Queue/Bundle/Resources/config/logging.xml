<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_queue.event_listener.loggable.class">Zenstruck\Queue\EventListener\LoggableSubscriber</parameter>
    </parameters>

    <services>
        <!-- Subscriber -->
        <service id="zenstruck_queue.event_listener.loggable" class="%zenstruck_queue.event_listener.loggable.class%">
            <argument type="service" id="logger" />
            <tag name="kernel.event_subscriber" />
            <tag name="monolog.logger" channel="queue" />
        </service>
    </services>
</container>
