<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_queue.queue.class">Zenstruck\Queue\QueueSpool</parameter>
        <parameter key="zenstruck_queue.event_listener.flush.class">Zenstruck\Queue\Bundle\EventListener\FlushQueueSpoolSubscriber</parameter>
    </parameters>

    <services>
        <!-- Subscriber -->
        <service id="zenstruck_queue.event_listener.flush" class="%zenstruck_queue.event_listener.flush.class%">
            <argument type="service" id="zenstruck_queue.queue" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
